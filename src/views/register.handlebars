<div class="navbar">
    <nav>
        <div class="navbar-logo">
            <img src="img/logo/logo.png" alt="">
        </div>
        <div class="navbar-search">
            <form class="searchbar">
                <input type="text">
                <button><img src="img/icons/lupa.png" alt=""></button>
            </form>
            <ul>
                <li class="navbar__item"><a href="/">Inicio</a></li>
                <li class="navbar__item"><a href="/products">Productos</a></li>
                <li class="navbar__item"><a href="/">Sobre nosotros</a></li>
                <li class="navbar__item"><a href="/">Contacto</a></li>
            </ul>
        </div>

        <div class="navbar-user">
            <div class="navbar-user__cart">
                <a href="/login"><img src="img/icons/carrito-de-compras.png" alt=""></a>
            </div>
            <ul>
                {{#if notUser}}
                <li class="navbar__item"><a href="/login">Iniciar Sesión</a></li>
                {{/if}}

                {{#if user}}
                <li class="navbar__item">
                    <p>Hola {{user.first_name}}</p>
                    <p class="navbar__item navbar__item-logout"><a href="/logout">Cerrar sesión</a></p>
                </li>
                {{/if}}

            </ul>
        </div>
    </nav>
</div>

<div>
     <div>
        <h1>Registro</h1>
    </div>

    <form action="/api/users/register" method="post" id="registerForm" class="register-form">
        <label for="first_name">Nombre</label>
        <input type="text" name="first_name" required>

        <label for="last_name">Apellido</label>
        <input type="text" name="last_name" required>

        <label for="age">Edad</label>
        <input type="number" name="age" required>

        <label for="email">Email</label>
        <input type="email" name="email" required>

        <label for="password">Contraseña</label>
        <input type="password" name="password" required>

        <button class="register-form__btn">Registrarme</button>
    </form>

    <div>
        <p>¿Ya tenés una cuenta?</p> <a href="/login">Iniciar sesión</a>
    </div>

    {{#if failRegister}}
    <p>error en el registro</p>
    {{/if}}
</div>