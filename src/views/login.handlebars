<div>
    <div>
        <h1>Iniciar sesión</h1>
    </div>

    <form action="/api/users/login" method="post" id="loginForm" class="login-form">
        <label for="email">Usuario(E-mail)</label>
        <input type="email" name="email" required>

        <label for="password">Contraseña</label>
        <input type="text" name="password" required>

        <button class="login-form__btn">Iniciar Sesión</button>
    </form>

    <div>
        <p>¿Necesitás una cuenta?</p> <a href="/register">Registrarse</a>
    </div>

    {{#if failLogin}}
    <p>error al ingresar</p>
    {{/if}}

</div>