<div class="real-time__container">
    <div class="form">
        <p class="form__title">Añadir un nuevo producto</p>
        <form  action="/realtimeproducts" method="post" enctype="multipart/form-data" id="newProductForm">
            <label for="title">Title</label>
            <input type="text" name="title">

            <label for="description">Description</label>
            <input type="text" name="description">

            <label for="price">Price</label>
            <input type="number" name="price">

            <label for="status">Status</label>
            <input type="text" name="status">

            <label for="code">Code</label>
            <input type="text" name="code">

            <label for="stock">Stock</label>
            <input type="number" name="stock">

            <label for="category">Category</label>
            <input type="text" name="category">

            <label for="thumbnails">Thumbnails</label>
            <input type="file" name="thumbnails" multiple required>

            <button class="form__btn">Añadir producto</button>
        </form>
    </div>
    <div class="cards-products" id="cardsDiv">
        {{#each products}}
        <div class="card-product" id="{{this.id}}">
            <picture class="card-product__img">
                <img src="{{this.thumbnails.[0]}}" alt="{{this.title}}">
            </picture>
            <div>
                <p class="card-product__title">{{this.title}} </p>
                <p class="card-product__price">${{this.price}} </p>
            </div>
            <div class="card-product__btn">
                <button><img src="img/icons/ver.png" alt="icono de ver"></button>
            </div>
            <div class="card-product__btn card-product__btn--delete">
                <button class="delete__btn"><img src="img/icons/borrar.png" alt="icono de borrar"></button>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>